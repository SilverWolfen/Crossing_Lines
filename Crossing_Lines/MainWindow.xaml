<Window x:Class="Crossing_Lines.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crossing_Lines"
        mc:Ignorable="d"
        Title="MainWindow" Height="416" Width="616" MinWidth="616" MinHeight="400">
    <Grid>
        <Canvas x:Name="MainCanvas" Margin="20,20,0,0" Background="LightGray" PreviewMouseDown="OnMouseDown" PreviewMouseUp="OnMouseUp" PreviewMouseMove="OnMouseMove" Height="294" VerticalAlignment="Top" HorizontalAlignment="Left" Width="560">

        </Canvas>
        <Button Name="ShapeCreateBtn" Content="Нарисовать фигуру" Margin="20,334,0,0" FontSize="16" Click="ShapeCreateBtn_Click" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="180"/>
        <Button Name="LineCreateBtn" Content="Раскидать линии" Margin="210,334,0,0" FontSize="16" Click="LineCreateBtn_Click" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="180"/>
        <Button Name="ClearBtn" Content="Очистить" Margin="400,334,0,0" FontSize="16" Click="ClearBtn_Click" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="180"/>
    </Grid>
</Window>
